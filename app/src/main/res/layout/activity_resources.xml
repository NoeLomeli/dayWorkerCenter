<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resources"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff9933"
    tools:context="com.example.sinistro.dayworker.Resources">

    <RadioButton
        android:text="ESL Classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="27dp"
        android:id="@+id/radioButton2"
        android:textSize="24sp" />

    <RadioButton
        android:text="FAQs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/questions"
        android:textSize="24sp"
        android:layout_below="@+id/radioButton2"
        android:layout_alignLeft="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2" />

    <RadioButton
        android:text="Translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/questions"
        android:layout_alignLeft="@+id/questions"
        android:layout_alignStart="@+id/questions"
        android:textSize="24sp" />

    <RadioButton
        android:text="Volunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/volunteer"
        android:textSize="24sp"
        android:layout_below="@+id/radioButton5"
        android:layout_alignLeft="@+id/radioButton5"
        android:layout_alignStart="@+id/radioButton5" />

    <RadioButton
        android:text="News and Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton7"
        android:textSize="24sp"
        android:layout_below="@+id/volunteer"
        android:layout_alignLeft="@+id/volunteer"
        android:layout_alignStart="@+id/volunteer"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:text="Donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donate"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/radioButton7"
        android:layout_alignLeft="@+id/radioButton7"
        android:layout_alignStart="@+id/radioButton7" />
</RelativeLayout>
