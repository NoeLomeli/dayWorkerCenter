<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff9933"
    tools:context="com.example.sinistro.dayworker.Hire">

    <CheckBox
        android:text="I'll detail below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail"
        android:layout_above="@+id/nxtMonth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" When do you need a worker?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/needWrk"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/usernameEntry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Full Name"
        android:singleLine="true"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:layout_below="@+id/usernameEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userNameEntry"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:hint="Phone Number"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Not until next month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/nxtMonth" />

    <CheckBox
        android:text="Right Away - ASAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nxtMonth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/asap" />

    <CheckBox
        android:text="Cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/land"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Hauling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/cement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Painting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox12"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Landscaping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/land"
        android:layout_alignBaseline="@+id/checkBox8"
        android:layout_alignBottom="@+id/checkBox8"
        android:layout_toRightOf="@+id/nxtMonth"
        android:layout_toEndOf="@+id/nxtMonth" />

    <CheckBox
        android:text="Cement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cement"
        android:layout_below="@+id/land"
        android:layout_alignLeft="@+id/land"
        android:layout_alignStart="@+id/land" />

    <CheckBox
        android:text="Construction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/construct"
        android:layout_below="@+id/cement"
        android:layout_alignRight="@+id/land"
        android:layout_alignEnd="@+id/land" />

    <CheckBox
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other"
        android:layout_below="@+id/construct"
        android:layout_alignLeft="@+id/cement"
        android:layout_alignStart="@+id/cement" />

    <CheckBox
        android:text=" Yard Work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/work"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Type of work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/work"
        android:textSize="18sp"
        android:layout_below="@+id/asap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/work"
        android:layout_toEndOf="@+id/work" />

</RelativeLayout>
